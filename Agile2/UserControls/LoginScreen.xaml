<UserControl x:Class="Agile2.UserControls.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Agile2.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="800"
             Background="White">

  <StackPanel VerticalAlignment="Center"
              HorizontalAlignment="Center"
              Margin="5 5 5 5">
    <Label Content="_Username"
           Target="{Binding ElementName=TxtUsername}"
           HorizontalAlignment="Center" />
    <TextBox Name="TxtUsername"
             Text="alice@agilesg.com"
             Width="300" />
    <Label Content="_Password"
           Target="{Binding ElementName=PwdPassword}"
           HorizontalAlignment="Center" />
    <PasswordBox Name="PwdPassword"
                 Password="agilealice"
                 Width="300" />

    <Button Content="Login"
            Margin="0, 20, 0, 0"
            Click="Login_Click"
            Width="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />

  </StackPanel>
</UserControl>
